:root {
  font-family: "Segoe UI", system-ui, -apple-system, sans-serif;
  color: #111827;
  background-color: #f5f7fb;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  min-height: 100vh;
}

a {
  color: inherit;
  text-decoration: none;
}

.page-shell {
  max-width: 900px;
  margin: 0 auto;
  padding: 48px 20px 64px;
}

.hero {
  text-align: center;
  margin-bottom: 28px;
}

.badge {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  background: #eef2ff;
  color: #4338ca;
  border-radius: 999px;
  font-weight: 600;
  font-size: 13px;
}

h1,
h2 {
  margin: 12px 0 8px;
  line-height: 1.3;
}

p {
  margin: 0;
  color: #4b5563;
}

.sub {
  color: #6b7280;
}

.card {
  background: white;
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 10px 35px rgba(15, 23, 42, 0.08);
  margin-bottom: 20px;
}

.intro ul {
  padding-left: 18px;
  color: #4b5563;
}

.primary {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  color: white;
  border: none;
  border-radius: 12px;
  padding: 12px 18px;
  font-weight: 700;
  cursor: pointer;
  transition: transform 0.1s ease, box-shadow 0.2s ease;
  box-shadow: 0 10px 25px rgba(99, 102, 241, 0.25);
}

.primary:hover {
  transform: translateY(-1px);
}

.primary:active {
  transform: translateY(0);
}

.ghost {
  background: transparent;
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 12px 18px;
  font-weight: 600;
  color: #374151;
  cursor: pointer;
}

.question-card h2 {
  margin-top: 6px;
}

.options {
  display: grid;
  gap: 12px;
  margin: 18px 0 8px;
}

.option {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  padding: 14px 16px;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  background: #f9fafb;
  cursor: pointer;
  text-align: left;
  font-weight: 600;
  color: #1f2937;
  transition: border-color 0.15s ease, box-shadow 0.15s ease, transform 0.1s ease;
}

.option:hover {
  border-color: #c7d2fe;
  box-shadow: 0 6px 18px rgba(99, 102, 241, 0.15);
}

.option.active {
  background: #eef2ff;
  border-color: #818cf8;
  box-shadow: 0 8px 20px rgba(99, 102, 241, 0.2);
}

.option-index {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border-radius: 10px;
  background: #e0e7ff;
  color: #4338ca;
  font-weight: 700;
}

.error {
  color: #b91c1c;
  margin-top: 4px;
}

.actions {
  display: flex;
  gap: 10px;
  margin-top: 18px;
  flex-wrap: wrap;
}

.progress {
  width: 100%;
  background: #f3f4f6;
  height: 8px;
  border-radius: 8px;
  overflow: hidden;
  margin-top: 12px;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(135deg, #60a5fa, #818cf8);
}

.result-card .score {
  text-align: center;
  margin-bottom: 16px;
}

.result-list {
  display: grid;
  gap: 14px;
}

.result-row {
  padding: 14px;
  border-radius: 12px;
  border: 1px solid #e5e7eb;
  background: #f9fafb;
}

.result-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 4px;
}

.pill {
  display: inline-flex;
  align-items: center;
  padding: 4px 10px;
  border-radius: 999px;
  font-weight: 700;
  font-size: 12px;
}

.pill.success {
  background: #ecfdf3;
  color: #166534;
}

.pill.warn {
  background: #fef3c7;
  color: #92400e;
}

.question-title {
  font-weight: 700;
  color: #111827;
  margin: 2px 0 6px;
}

.answer {
  margin-bottom: 4px;
}

.desc {
  color: #6b7280;
}

.light {
  color: #9ca3af;
  font-weight: 600;
}

/* Dashboard Container */
.dashboard-container {
  display: flex;
  gap: 24px;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: relative;
  padding: 100px 0;
  font-family: 'Inter', sans-serif;
}

.dashboard-column {
  display: flex;
  flex-direction: column;
  gap: 24px;
  flex-shrink: 0;
  position: relative;
}

.dashboard-row {
  display: flex;
  gap: 24px;
  flex-shrink: 0;
}

/* Dashboard Card Base */
.dashboard-card {
  background: linear-gradient(135deg, rgba(19, 20, 21, 0.95) 0%, rgba(25, 28, 31, 0.95) 100%);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 20px;
  padding: 24px;
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  backdrop-filter: blur(10px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

/* Card Header */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24px;
}

.card-header-left {
  display: flex;
  gap: 12px;
  align-items: center;
}

.card-icon {
  width: 48px;
  height: 48px;
  object-fit: contain;
  border-radius: 12px;
}

.task-icon {
  width: 24px;
  height: 24px;
  object-fit: contain;
}

.card-title-group {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.card-title {
  color: #ffffff;
  font-size: 14px;
  font-weight: 700;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  margin: 0;
}

.card-subtitle {
  color: #9C9C9C;
  font-size: 12px;
  font-weight: 400;
  margin: 0;
}

/* Status Badge */
.status-badge {
  padding: 6px 12px;
  border-radius: 8px;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.status-badge.active {
  background: rgba(0, 255, 127, 0.15);
  color: #00FF7F;
  border: 1px solid rgba(0, 255, 127, 0.3);
}

/* Live Strategy Card */
.live-strategy-card {
  width: 360px;
  min-width: 360px;
}

.pnl-section {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  gap: 12px;
}

.pnl-value {
  font-size: 48px;
  font-weight: 700;
  background: linear-gradient(135deg, #00D3F2 0%, #00FFC8 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.pnl-label {
  color: #9C9C9C;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 4px;
  overflow: hidden;
  margin: 16px 0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #00D3F2 0%, #00FFC8 50%, #00FF7F 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.stats-row {
  display: flex;
  gap: 24px;
  justify-content: space-around;
  padding: 24px 0px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  flex: 1;
  padding: 16px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.stat-label {
  color: #9C9C9C;
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.stat-value {
  color: #ffffff;
  font-size: 20px;
  font-weight: 700;
}

/* Info Card (Following Vaults & Secured Chains) */
.info-card {
  width: 240px;
  min-width: 240px;
  align-items: flex-start;
  justify-content: center;
  text-align: left;
  padding: 24px;
  position: relative;
  overflow: hidden;
}

.info-card-icon {
  width: 56px;
  height: 56px;
  object-fit: contain;
  margin-bottom: 20px;
  filter: drop-shadow(0 4px 12px rgba(21, 208, 255, 0.3));
}

.info-card-number {
  font-size: 56px;
  font-weight: 700;
  background: linear-gradient(135deg, #ffffff 0%, #9C9C9C 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8px;
}

.info-card-label {
  color: #9C9C9C;
  font-size: 12px;
  font-weight: 600;
  letter-spacing: 0.8px;
  text-transform: uppercase;
  margin: 0;
}

/* Meme Personality Card */
.meme-card {
  width: 100%;
  min-width: 100%;
  padding: 4px 24px;
  background: linear-gradient(135deg, rgba(19, 20, 21, 0.95) 0%, rgba(25, 28, 31, 0.95) 100%);
  border: 1px solid rgba(255, 255, 255, 0.05);
  flex-direction: row !important;
  align-items: center;
  gap: 24px;
}

.meme-content {
  display: flex;
  align-items: center;
  gap: 16px;
  flex: 1;
}

.meme-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  object-fit: cover;
}

.meme-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
  flex: 1;
}

.meme-title {
  color: #ffffff;
  font-size: 14px;
  font-weight: 700;
  margin: 0;
}

.meme-subtitle {
  color: #9C9C9C;
  font-size: 12px;
  font-weight: 400;
  margin: 0;
}

.meme-score {
  display: flex;
  flex-direction: column;
  align-items: end;
  gap: 8px;
  padding: 16px;
  min-width: 100px;
}

.score-value {
  font-size: 32px;
  font-weight: 700;
  color: rgba(52, 211, 153, 1);
  -webkit-text-stroke: 0.5px currentColor;
  paint-order: stroke fill;
}

.score-label {
  color: #9C9C9C;
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

/* Tasks Card */
.tasks-card {
  width: 280px;
  min-width: 280px;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
  margin-bottom: 64px;
}

.task-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px 0;
}

.task-bullet {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  margin-right: 4px;
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.2);
  flex-shrink: 0;
}

.task-bullet.completed {
  background: #00FF7F;
  border-color: #00FF7F;
  box-shadow: 0 0 8px rgba(0, 255, 127, 0.4);
}

.task-bullet.active {
  background: #15D0FF;
  border-color: #15D0FF;
  box-shadow: 0 0 8px rgba(21, 208, 255, 0.4);
}

.task-name {
  flex: 1;
  color: #ffffff;
  font-size: 14px;
  font-weight: 500;
}

.completion-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 8px;
  padding: 0;
}

.completion-label {
  color: #9C9C9C;
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 0.5px;
  text-transform: uppercase;
}

.completion-value {
  color: #ffffff;
  font-size: 32px;
  font-weight: bolder;
  -webkit-text-stroke: 0.5px currentColor;
  paint-order: stroke fill;
}

@media (max-width: 640px) {
  .page-shell {
    padding: 28px 14px 36px;
  }

  .option {
    gap: 10px;
    padding: 12px 12px;
  }
}

/* ========== Home Page Styles ========== */

/* Vault Button Styles */
.vault-btn {
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  color: #000000;
  border: none;
  border-radius: 12px;
  padding: 12px 24px;
  font-weight: bold;
  font-family: 'Inter', sans-serif;
  font-size: 14px;
  cursor: pointer;
  transition: transform 0.1s ease, box-shadow 0.2s ease;
  width: 100%;
  margin-top: auto;
  letter-spacing: 1px;
}

.vault-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(81, 162, 255, 0.3);
}

.vault-btn:active {
  transform: translateY(0);
}

/* Percentage Button Styles */
.percentage-btn {
  width: 100%;
  margin-top: 16px;
  padding: 12px 24px;
  border: none;
  border-radius: 18px;
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  color: #000000;
  font-size: 18px;
  font-family: 'Inter', sans-serif;
  font-weight: bold;
  cursor: pointer;
  transition: transform 0.1s ease, box-shadow 0.2s ease;
}

.percentage-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(81, 162, 255, 0.3);
}

.percentage-btn:active {
  transform: translateY(0);
}

/* Risk Badge Styles */
.risk-badge {
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
}

.risk-badge.low-risk {
  border-radius: 20px;
  border: 1px solid rgba(52, 211, 153, 0.39);
  background: rgba(123, 255, 182, 0.2);
  color: #7BFFB6;
  font-family: Manrope;
  font-size: 14px;
  font-style: normal;
  font-weight: 700;
  line-height: 24.5px;
}

.risk-badge.medium-risk {
  border-radius: 20px;
  border: 1px solid rgba(251, 191, 36, 0.39);
  background: rgba(251, 191, 36, 0.2);
  color: #FBBF24;
  font-family: Manrope;
  font-size: 14px;
  font-style: normal;
  font-weight: 700;
  line-height: 24.5px;
}

.risk-badge.high-risk {
  border-radius: 20px;
  border: 1px solid rgba(239, 68, 68, 0.39);
  background: rgba(239, 68, 68, 0.2);
  color: #EF4444;
  font-family: Manrope;
  font-size: 14px;
  font-style: normal;
  font-weight: 700;
  line-height: 24.5px;
}

/* Social Button Styles */
.social-btn {
  background: transparent;
  color: #ffffff;
  border: 1px solid;
  border-color: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
  padding: 13px 23px;
  font-weight: 600;
  font-size: 14px;
  cursor: pointer;
  position: relative;
  transition: all 0.3s ease;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.social-btn::before {
  content: '';
  position: absolute;
  top: -1px;
  left: -1px;
  right: -1px;
  bottom: -1px;
  border-radius: 10px;
  background: linear-gradient(135deg, 
    #00ff00 0%, 
    #00bfff 25%, 
    #9370db 50%, 
    #ff69b4 75%, 
    #00ff00 100%);
  background-size: 200% 200%;
  animation: gradientShift 3s ease infinite;
  box-shadow: 0 0 30px rgba(0, 255, 0, 0.3),
              0 0 60px rgba(0, 191, 255, 0.2),
              0 0 90px rgba(147, 112, 219, 0.2),
              0 0 120px rgba(255, 105, 180, 0.1);
  z-index: -1;
}

.social-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 10px;
  background: #000000;
  z-index: -1;
}

.social-btn:hover {
  transform: translateY(-2px);
}

.social-btn:hover::after {
  background: rgba(0, 0, 0, 0.8);
}

.social-btn:active {
  transform: translateY(0);
}

@keyframes gradientShift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

/* ========== Home Page - Hero Section ========== */
.hero {
  text-align: center;
  margin-bottom: 48px;
}

.main-title {
  font-size: 64px;
  font-weight: 900;
  margin-bottom: 24px;
  line-height: 1.2;
}

.title-part1 {
  display: block;
  background: linear-gradient(90deg, #ffffff 0%, #a0a0a0 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.title-part2 {
  display: block;
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.sub {
  font-size: 18px;
  color: #9ca3af;
  margin-bottom: 32px;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  line-height: 1.6;
}

.primary {
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  color: #000000;
  border: none;
  border-radius: 12px;
  padding: 16px 48px;
  font-size: 18px;
  font-weight: bold;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(81, 162, 255, 0.4);
}

.primary:active {
  transform: translateY(0);
}

/* ========== Dashboard Container ========== */
.dashboard-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
  margin-bottom: 48px;
}

.dashboard-column {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.dashboard-card {
  background: #1a1b1e;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 24px;
  transition: all 0.3s ease;
}

.dashboard-card:hover {
  border-color: rgba(81, 162, 255, 0.3);
  box-shadow: 0 4px 24px rgba(81, 162, 255, 0.1);
}

/* Card Header */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24px;
}

.card-header-left {
  display: flex;
  align-items: center;
  gap: 12px;
}

.card-icon {
  width: 40px;
  height: 40px;
  border-radius: 8px;
}

.card-title-group {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.card-title {
  font-size: 16px;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  letter-spacing: 0.5px;
}

.card-subtitle {
  font-size: 12px;
  color: #6b7280;
  margin: 0;
}

.status-badge {
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
}

.status-badge.active {
  background: rgba(34, 197, 94, 0.2);
  color: #22c55e;
  border: 1px solid rgba(34, 197, 94, 0.3);
}

/* Live Strategy Card */
.pnl-section {
  text-align: center;
  margin-bottom: 16px;
}

.pnl-value {
  font-size: 48px;
  font-weight: 900;
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8px;
}

.pnl-label {
  font-size: 14px;
  color: #6b7280;
  font-weight: 600;
  letter-spacing: 1px;
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 24px;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  transition: width 0.3s ease;
}

.stats-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
  margin-bottom: 16px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stat-label {
  font-size: 12px;
  color: #6b7280;
  font-weight: 600;
}

.stat-value {
  font-size: 18px;
  color: #ffffff;
  font-weight: 700;
}

.strategy-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.followers {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 14px;
  color: #9ca3af;
}

.followers-count {
  color: #ffffff;
  font-weight: 600;
}

.copy-strategy-btn {
  background: rgba(81, 162, 255, 0.1);
  color: #51A2FF;
  border: 1px solid rgba(81, 162, 255, 0.3);
  border-radius: 8px;
  padding: 8px 16px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.copy-strategy-btn:hover {
  background: rgba(81, 162, 255, 0.2);
  border-color: rgba(81, 162, 255, 0.5);
}

/* Following Card */
.following-count {
  font-size: 72px;
  font-weight: 900;
  text-align: center;
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8px;
}

.following-label {
  text-align: center;
  font-size: 14px;
  color: #6b7280;
  font-weight: 600;
  letter-spacing: 1px;
  margin-bottom: 24px;
}

.trending-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.trending-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8px;
  transition: all 0.2s ease;
}

.trending-item:hover {
  background: rgba(255, 255, 255, 0.05);
}

.trending-name {
  font-size: 14px;
  color: #ffffff;
  font-weight: 600;
}

.trending-change {
  font-size: 14px;
  font-weight: 700;
}

.trending-change.positive {
  color: #22c55e;
}

.trending-change.negative {
  color: #ef4444;
}

/* Meme Card */
.meme-header {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 24px;
}

.meme-avatar {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  border: 2px solid rgba(81, 162, 255, 0.3);
}

.meme-info {
  flex: 1;
}

.meme-title {
  font-size: 18px;
  font-weight: 700;
  color: #ffffff;
  margin: 0 0 4px 0;
}

.meme-subtitle {
  font-size: 14px;
  color: #6b7280;
  margin: 0;
}

.meme-score {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.score-value {
  font-size: 32px;
  font-weight: 900;
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.score-label {
  font-size: 12px;
  color: #6b7280;
  font-weight: 600;
  letter-spacing: 1px;
}

/* Tasks Card */
.tasks-card {
  height: 100%;
}

.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.task-item {
  display: flex;
  align-items: center;
  gap: 12px;
}

.task-bullet {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.task-bullet.completed {
  background: linear-gradient(135deg, #51A2FF 0%, #00D492 100%);
  border-color: #51A2FF;
}

.task-name {
  font-size: 14px;
  color: #ffffff;
  font-weight: 500;
}

.task-images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
  margin-top: 24px;
}

.task-image {
  width: 100%;
  height: 120px;
  object-fit: cover;
  border-radius: 8px;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

/* Secured Card */
.secured-amount {
  font-size: 48px;
  font-weight: 900;
  text-align: center;
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 8px;
}

.secured-label {
  text-align: center;
  font-size: 14px;
  color: #6b7280;
  font-weight: 600;
  letter-spacing: 1px;
  margin-bottom: 24px;
}

.vault-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.vault-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8px;
}

.vault-name {
  font-size: 14px;
  color: #ffffff;
  font-weight: 600;
}

.vault-apy {
  font-size: 14px;
  font-weight: 700;
  color: #22c55e;
}

/* ========== Trending Vaults Section ========== */
.trending-vaults {
  margin-bottom: 48px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
}

.section-title {
  font-size: 32px;
  font-weight: 900;
  color: #ffffff;
  margin: 0;
}

.view-all-btn {
  background: rgba(255, 255, 255, 0.05);
  color: #ffffff;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 8px 16px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.view-all-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
}

.vaults-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
}

.vault-card {
  background: #1a1b1e;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 16px;
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
  transition: all 0.3s ease;
}

.vault-card:hover {
  border-color: rgba(81, 162, 255, 0.3);
  box-shadow: 0 4px 24px rgba(81, 162, 255, 0.1);
  transform: translateY(-4px);
}

.vault-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.vault-info {
  flex: 1;
}

.vault-name {
  font-size: 18px;
  font-weight: 700;
  color: #ffffff;
  margin: 0 0 4px 0;
}

.vault-creator {
  font-size: 12px;
  color: #6b7280;
  margin: 0;
}

.vault-metrics {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  padding: 16px 0;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.metric {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.metric-label {
  font-size: 12px;
  color: #6b7280;
  font-weight: 600;
}

.metric-value {
  font-size: 16px;
  color: #ffffff;
  font-weight: 700;
}

.metric-value.positive {
  color: #22c55e;
}

.metric-value.negative {
  color: #ef4444;
}

.vault-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.tag {
  padding: 4px 12px;
  background: rgba(81, 162, 255, 0.1);
  color: #51A2FF;
  border: 1px solid rgba(81, 162, 255, 0.3);
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
}

/* Trending Vault Cards (special styling) */
.trending-vault-card {
  background: linear-gradient(135deg, rgba(81, 162, 255, 0.1) 0%, rgba(0, 212, 146, 0.1) 100%);
  border: 1px solid rgba(81, 162, 255, 0.3);
}

.trending-vault-card .vault-name {
  background: linear-gradient(90deg, #51A2FF 0%, #00D3F2 50%, #00D492 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* ========== Footer ========== */
.footer {
  text-align: center;
  padding: 48px 0;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.join-us {
  font-size: 24px;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 24px;
}

.social-buttons {
  display: flex;
  justify-content: center;
  gap: 16px;
  margin-bottom: 32px;
}

.copyright {
  font-size: 14px;
  color: #6b7280;
  margin: 0;
}

/* ========== Dashboard Section Wrapper ========== */
.dashboard-section {
  margin: 64px 0;
  width: 100%;
}

/* ========== Responsive Design ========== */
@media (max-width: 1024px) {
  .dashboard-section {
    margin: 64px 0;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .dashboard-container {
    gap: 24px;
    flex-wrap: nowrap;
    overflow-x: hidden;
    justify-content: flex-start;
  }

  .dashboard-card {
    min-width: 280px;
    width: 280px;
  }

  .vaults-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .navbar {
    padding: 16px 20px;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .navbar-right {
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .nav-link {
    font-size: 14px;
    padding: 6px 10px;
  }

  .main-title {
    font-size: 48px;
  }

  .title-part1,
  .title-part2 {
    font-size: 48px;
  }

  .sub {
    font-size: 16px;
  }

  .dashboard-section {
    margin: 32px 0;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }

  .dashboard-container {
    padding: 0 14px;
    gap: 20px;
    flex-wrap: nowrap;
    overflow-x: hidden;
    justify-content: flex-start;
  }

  .dashboard-card {
    min-width: 260px;
    width: 260px;
  }

  .vaults-grid {
    grid-template-columns: 1fr;
  }

  .stats-row {
    grid-template-columns: 1fr;
  }

  .social-buttons {
    flex-direction: column;
    align-items: center;
  }

  .social-btn {
    width: 100%;
    max-width: 300px;
  }
}

@media (max-width: 640px) {
  .page-shell {
    padding: 28px 14px 36px;
  }

  .navbar {
    padding: 12px 14px;
    grid-template-columns: 1fr;
  }

  .navbar-brand {
    font-size: 16px;
  }

  .navbar-right {
    width: 100%;
    justify-content: center;
  }

  .title-part1,
  .title-part2 {
    font-size: 36px;
  }

  .option {
    gap: 10px;
    padding: 12px;
  }

  .footer {
    padding: 32px 16px;
  }

  .dashboard-section {
    margin: 32px 0;
  }

  .dashboard-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .content-section {
    margin: 32px 0;
  }
}

/* ========== Result Page Styles ========== */
.result-empty-page {
  min-height: 100vh;
  width: 100%;
  background-color: #000000;
}

.result-page-shell {
  min-height: 100vh;
  background-color: #000000;
  padding: 48px 20px;
}

.result-container {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 32px;
  align-items: stretch;
}

.result-left {
  display: flex;
  flex-direction: column;
  gap: 40px;
  position: relative;
  padding: 1px;
  border-radius: 40px;
  background: linear-gradient(135deg, #00ff00 0%, #00bfff 25%, #9370db 50%, #ff69b4 75%, #00ff00 100%);
  background-size: 200% 200%;
  animation: gradientShift 3s ease infinite;
  height: 100%;
}

.result-left-inner {
  display: flex;
  flex-direction: column;
  gap: 40px;
  background: #000000;
  border-radius: 40px;
  padding: 40px;
  flex: 1;
}

.result-card-container {
  position: relative;
  padding: 2px;
  border-radius: 20px;
  width: 100%;
  max-width: 320px;
  margin: 0 auto;
}

.result-main-card {
  background: var(--result-color, #FFF8A7);
  border-radius: 18px;
  padding: 24px;
  text-align: center;
  color: #000000;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.persona-title {
  font-size: 36px;
  font-weight: 700;
  margin: 0 0 16px 0;
  color: #000000;
}

.persona-illustration {
  margin: 16px 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.persona-emoji {
  font-size: 80px;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
}

.persona-image {
  width: 100%;
  height: auto;
  max-height: 200px;
  object-fit: contain;
  filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
}

.persona-shadow {
  width: 66%;
  max-width: 220px;
  height: auto;
  margin-top: -20px;
  margin-left: 8px;
  opacity: 1;
}

.persona-description {
  font-size: 14px;
  line-height: 1.5;
  color: #000000;
  margin: 16px 0 0 0;
  text-align: left;
}

.result-social-buttons {
  display: flex;
  gap: 16px;
}

.social-share-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 14px 24px;
  background: #ffffff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 12px;
  color: #000000;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.social-share-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
}

.social-share-btn svg {
  width: 20px;
  height: 20px;
}

.retake-test-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  width: 100%;
  padding: 16px 24px;
  background: #1a1a1a;
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  color: #ffffff;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.retake-test-btn:hover {
  background: #222222;
  transform: translateY(-2px);
}

.retake-icon {
  width: 16px;
  height: 16px;
  filter: brightness(0) invert(1);
}

.result-right {
  display: flex;
  flex-direction: column;
  gap: 32px;
  height: 100%;
}

.trading-vibe-section {
  display: flex;
  flex-direction: column;
  gap: 16px;
  text-align: center;
}

.trading-vibe-title {
  font-size: 32px;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
}

.trading-vibe-description {
  font-size: 16px;
  line-height: 1.6;
  color: #9ca3af;
  margin: 0;
}

.radar-chart-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 8px 0;
  padding: 20px;
  position: relative;
  overflow: visible;
}

.radar-chart-container:before,
.radar-chart-container:after {
  display: none;
  content: none;
}

.radar-chart-container *:before,
.radar-chart-container *:after {
  display: none;
  content: none;
}

.radar-chart {
  width: 100%;
  max-width: 200px;
  height: auto;
}

.recommendation-card-container {
  position: relative;
  padding: 1px;
  border-radius: 40px;
  background: linear-gradient(135deg, #00ff00 0%, #00bfff 25%, #9370db 50%, #ff69b4 75%, #00ff00 100%);
  background-size: 200% 200%;
  animation: gradientShift 3s ease infinite;
}

.recommendation-card {
  background: #000000;
  border-radius: 40px;
  padding: 32px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.recommendation-title {
  font-size: 24px;
  font-weight: 700;
  color: #ffffff;
  margin: 0;
  text-align: center;
}

.recommendation-description {
  font-size: 14px;
  line-height: 1.6;
  color: #9b9b9b;
  margin: 0;
  text-align: center;
}

.follow-vault-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 14px 20px;
  background: linear-gradient(90deg, #15d0ff 0%, #5afde5 12.98%, #fff8a7 43.75%, #ffacac 71.15%, #ff85f1 92.79%);
  border: none;
  border-radius: 12px;
  color: #000000;
  font-size: 14px;
  font-weight: 700;
  cursor: pointer;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  box-shadow: 0 4px 12px rgba(21, 208, 255, 0.3);
}

.follow-vault-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(21, 208, 255, 0.4);
}

.follow-icon {
  width: 20px;
  height: 20px;
  filter: brightness(0);
}

@media (max-width: 1024px) {
  .result-container {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .result-page-shell {
    padding: 24px 16px;
  }

  .persona-title {
    font-size: 36px;
  }

  .persona-emoji {
    font-size: 80px;
  }

  .trading-vibe-title {
    font-size: 24px;
  }

  .result-social-buttons {
    flex-direction: column;
  }
}

